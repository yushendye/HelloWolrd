<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/relative"
        android:layout_height="match_parent"
        android:padding="5dp"
        tools:context=".RegistrationPage">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imv_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@android:mipmap/sym_def_app_icon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_below="@id/imv_logo"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_f_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_l_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_marginTop="5dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Date of Birth"
                android:inputType="date"/>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Enter Password"
                android:inputType="textPassword"/>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/edt_cnf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/prompt_style"
                android:layout_marginTop="12dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Style"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg_theme">
                <RadioButton
                    android:id="@+id/rb_light"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:text="Light Theme"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rb_gray"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:text="Gray Theme"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <TextView
                android:id="@+id/prompt_gender"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gender"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg_gender">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/rb_male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/rb_female"/>
            </RadioGroup>
            <TextView
                android:id="@+id/prompt_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:text="Select Courses"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                android:textSize="18dp"
                android:id="@+id/chk_java"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine Learning"
                android:textSize="18dp"
                android:id="@+id/chk_ml"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textSize="18dp"
                android:id="@+id/chk_python"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artificial Intelligence"
                android:textSize="18dp"
                android:id="@+id/chk_ai"/>
            <Button
                android:id="@+id/btn_register"
                android:onClick="open_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>